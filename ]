#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include "alias.h"


#define RC_FILE ".caliases"
#define MAX_LINE 512



void list_aliases() {
  printf("Listar aliases aqui!! \n");


  const char *home = getenv("HOME");
  
  char path[512];

  snprintf(path, sizeof(path), "%s/%s", home, RC_FILE);
  
  FILE* file = fopen(path, "r");

  if (file == NULL) {
    return;
  }

  char line[MAX_LINE];

  while (fgets(line, sizeof(line), file)) {
    printf("%s", line);


    
    printf("name: %s", name);

  }

  fclose(file);
}

void add_alias(const char* alias) {
  printf("hmm q belo alias temos aqui\n");
  printf("%s \n", alias);
}


Alias parse_alias(char char *input) {
    Alias a;
    char *equal_sign = strchr(input, '=');

    size_t name_len = equal_sign - input;

    strncpy(a.name, input, name_len);
    a.name[name_len] = '\0';

    const char *command = equal_sign + 1;

    strncpy(a.command, cmd, MAX_COMMAND - 1);


}
